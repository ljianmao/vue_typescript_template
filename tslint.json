{
    "extends": "tslint-config-standard",
    "globals": {
        "require": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rulesDirectory": [
        "src/",
        "test/"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "object-curly-spacing": [
            "error",
            "never"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-consecutive-blank-lines": false,
        "ter-indent": [
            true,
            4,
            {
                "FunctionExpression": {
                    "parameters": 1,
                    "body": 1
                }
            }
        ],
        "space-before-function-paren": [
            false
        ],
        "no-unused-expression": [
            true,
            "allow-fast-null-checks"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    },
    "cliOptions": {
        "exclude": [
            "bin",
            "build",
            "node_modules"
        ]
    },
    "strict-type-predicates": true,
    "semicolon": [
        true,
        "never",
        "ignore-interfaces"
    ],
    "trailing-comma": [
        false,
        {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
            },
            "singleline": {
                "objects": "always",
                "arrays": "ignore",
                "functions": "never",
                "typeLiterals": "ignore"
            },
            "esSpecCompliant": false
        }
    ],
    "comma-dangle": [
        2,
        "never"
    ],
    "object-curly-spacing": [
        "error",
        "always"
    ]
}